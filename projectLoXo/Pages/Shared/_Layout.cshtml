<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hệ cơ sở tri thức</title>
    <link rel="stylesheet" href="~/css/cainaylacss.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
   
</head>
<body>
    <header>
        <div class="containe thanhmenu">
        <div class="row" style="align-items: center;">
            <div class="col-sm-4">
                <div class="dropdown ">
                    <button class="btn" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/images/dropdown.png" class="siuu">
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                      
                      @if(NguoiDung.QuyenHan=="admin")
                      {
                            <li><a class="dropdown-item" href="/Index">Giải bài tập</a></li>
                            <li><a class="dropdown-item" href="#">Lịch sử</a></li>
                            <li><a class="dropdown-item" href="#">Sửa tri thức</a></li>
                      } else {
                            <li><a class="dropdown-item" href="/Index">Giải bài tập</a></li>
                            <li><a class="dropdown-item" href="#">Lịch sử</a></li>
                      }
                      
                    </ul>
                </div>
                
            </div>
            <div class="col-sm-4" style="justify-content: center;display: flex;">
                <a class="btn" href="/Index">
                        <img src="~/images/HBlogo.png" class="logoHB">
                </a>
               
            </div>
               

            <div class="col-sm-4" style="justify-content: right;display: flex;">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown ">
                        <button class="btn" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/lion.png" style="width: 40px;">
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="/Thongtin">Thông tin</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Logout">Đăng xuất</a></li>
                        </ul>
                    </div>
                } else {
                    <button class="btn btn-light" id="btnlogin">Đăng nhập</button>
                }
            </div>
        </div>
        
    </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/cainaylajs.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>